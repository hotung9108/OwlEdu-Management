<script type="module">
    const mockData = {
        daily: {
            totalRevenue: "2.078.200.000 đ",
            tuitionRevenue: "2.024.690.000 đ",
            salesRevenue: "53.510.000 đ",
            debtRevenue: "41.800.000 đ",
        },
        monthly: {
            totalRevenue: "62.346.000.000 đ",
            tuitionRevenue: "60.740.700.000 đ",
            salesRevenue: "1.605.300.000 đ",
            debtRevenue: "1.254.000.000 đ",
        },
        yearly: {
            totalRevenue: "748.152.000.000 đ",
            tuitionRevenue: "729.000.000.000 đ",
            salesRevenue: "19.152.000.000 đ",
            debtRevenue: "15.048.000.000 đ",
        },
    };

    function updateRevenueView(view) {
        const data = mockData[view];
        $("#totalRevenue").text(data.totalRevenue);
        $("#tuitionRevenue").text(data.tuitionRevenue);
        $("#salesRevenue").text(data.salesRevenue);
        $("#debtRevenue").text(data.debtRevenue);
    }

    $(document).ready(function () {
        $("#dailyBtn").click(() => updateRevenueView("daily"));
        $("#monthlyBtn").click(() => updateRevenueView("monthly"));
        $("#yearlyBtn").click(() => updateRevenueView("yearly"));

        // Default view
        updateRevenueView("daily");
    });
</script>


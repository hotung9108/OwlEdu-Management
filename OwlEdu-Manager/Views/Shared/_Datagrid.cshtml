@model string

<div id ="@Model" class="datagrid-container fit">
    <table class="datagrid">
        <thead>
            <tr>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>IELTS</td>
                <td>Khóa học tiếng anh</td>
                <td>100</td>
                <td>100.000.000đ</td>
                <td>
                    <button type="button" class="btn btn-light btn-outline-secondary"><i class="fa-solid fa-info"></i> Chi tiết</button>
                    <button type="button" class="btn btn-light btn-outline-secondary"><i class="fa-solid fa-arrow-right-to-bracket"></i> Đăng ký</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<style>
.datagrid-container {
    width: 100%;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    overflow-x: auto;
}

.datagrid {
    border-collapse: collapse;
}

/* Fit mode: cột vừa nội dung, có scroll khi quá dài */
.datagrid-container.fit .datagrid {
    table-layout: auto;
    width: auto;
}

/* Fill mode: bảng co vừa container */
.datagrid-container.fill .datagrid {
    table-layout: fixed;
    width: 100%;
}

.datagrid th, .datagrid td {
    padding: 8px 10px;
    border-bottom: 1px solid var(--border);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 14px;
}

.datagrid thead {
    background-color: rgba(16, 66, 167, 0.1);
    color: var(--text-main);
    cursor: pointer;
    text-align: center;
}

.datagrid tbody {
    color: var(--text-muted);
    text-align: center; 
}

/* .datagrid tbody tr:hover { background-color: var(--primary-hover); color: var(--text-reverse); }
.datagrid tbody tr.selected { background-color: var(--primary); color: var(--text-reverse); } */

.datagrid th.sorted-asc::after {
    content: " ▲";
}
.datagrid th.sorted-desc::after {
    content: " ▼";
}
</style>

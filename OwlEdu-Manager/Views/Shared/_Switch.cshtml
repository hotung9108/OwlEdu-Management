@model string

<div class="btl-switch">
    <input type="checkbox" id="@Model">
    <label for="@Model"></label>
</div>

<style>
.btl-switch {
    position: relative; 
    display: inline-block;
    width: 50px;
    height: 28px;
}
.btl-switch input {
    opacity: 0;
    width: 0;
    height: 0;
}
.btl-switch label {
    position: absolute;
    cursor: pointer;
    background-color: var(--border);
    border-radius: 28px;
    top: 0; left: 0; right: 0; bottom: 0;
    transition: 0.3s;
}
.btl-switch label::before {
    content: "";
    position: absolute;
    height: 22px;
    width: 22px;
    left: 3px;
    bottom: 3px;
    background-color: var(--surface);
    border-radius: 50%;
    transition: 0.3s;
}
.btl-switch input:checked + label {
    background-color: var(--primary);
}
.btl-switch input:checked + label::before {
    transform: translateX(22px);
}
</style>

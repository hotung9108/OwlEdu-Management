<script>
    function logoutUser() {
        document.cookie.split(";").forEach(function (cookie) {
            const name = cookie.split("=")[0].trim();
            document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 UTC;path=/;";
        });

        window.location.assign("/Authentication/Login");
    }
</script>
<script type="module">
import {getStudentID} from "../../js/Utils/getCookies.js";
import StudentService from "../../js/API/StudentService.js";

window.toggleFullScreen = toggleFullScreen;
window.Setup = Setup;

await Setup();

async function Setup() {
    console.log(getStudentID());
    const studentInfor = await StudentService.getStudentById(getStudentID());
    $('#user-fullname').text(studentInfor.fullName);
}

$(document).ready(function() {
    $('.btn-mode').click(function() {
        $('.btn-mode').toggleClass('dark');
        if($('.btn-mode').hasClass('dark')) {
            $(this).html('<i class="fa-solid fa-moon"></i>');
        } else {
            $(this).html('<i class="fa-solid fa-sun"></i>');
        }
    });

    $('.btn-user').mouseenter(function(e) {
      e.stopPropagation(); 
      $('.user-menu .dropdown').stop(true, true).slideToggle(200);
    });

    $('.user-menu .dropdown').mouseleave(function() {
        $('.user-menu .dropdown').hide();
    });

    $(document).ready(function() {
        $('.user-menu .dropdown').hide();
    });
});

$('.sidebar-item').on('click', function () {
    $('.sidebar-item').removeClass('active');
    $(this).addClass('active');
});

$(document).ready(function() {
    $('.sidebar-item').first().click();
});

function toggleFullScreen() {
    if (!document.fullscreenElement) {
        $('.btn-fullscreen').html('<i class="fa-solid fa-expand"></i>');
        document.documentElement.requestFullscreen();
    } else {
        $('.btn-fullscreen').html('<i class="fa-solid fa-compress"></i>');
        document.exitFullscreen();
    }
}
</script>
